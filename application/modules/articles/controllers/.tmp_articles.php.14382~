<?php
class Articles extends Public_Controller
{
	
	function __construct()
	{
		parent::__construct();
	}
	
	function inc_information()
	{
		$categories = new Category();
		$data['categories'] = $categories->where('parents = 2')->order_by('lft','asc')->get(); 
		$this->load->view('inc_information',$data);
	}
}
?>