<?php
class Link extends Admin_Controller
{
	
	function __construct()
	{
		parent::__construct();
		$this->load->model('Link_model','link');
	}
	
	function index()
	{
		$data['result'] = $this->link->limit(20)->get();
		$data['pagination'] = $this->link->pagination();
		$this->template->build('admin/link_index',$data);
	}
	
	function form($id = FALSE)
	{
		$data['rs'] = $this->link->get_row($id);
		$this->template->build('admin/link_form',$data);
	}
	
	function save()
	{
		if($_POST)
		{
			$id = $this->link->save($_POST);
			if($_FILES['image']['name'])
			{
				$this->link->delete_file($id,'uploads/link/','image');
				$this->link->delete_file($id,'uploads/link/thumb/','image');
				
				$this->link->save(array('id' => $id, 'image' => $this->link->upload($_FILES['image'],'uploads/link/')));
				$this->link->thumb('uploads/link/thumb/',LINK_IMG_WIDTH,LINK_IMG_HEIGHT);	
			} 
			
			set_notify('success', SAVE_DATA_COMPLATE);
		}
		redirect('link/admin/link/form/'.$id);
	}
	
	function delete($id)
	{
		if($id)
		{
			$this->link->delete($id);
			set_notify('success', DELETE_DATA_COMPLATE);
		} 
		redirect('link/admin/link');		
	}
	function remove_image($id)
	{
		$this->link->delete_file($id,'uploads/link/','image');
		$this->link->delete_file($id,'uploads/link/thumb/','image');
		
		$this->link->save(array('id' => $id, 'image' => NULL));
		set_notify('success', REMOVE_IMAGE_COMPLATE);
		redirect('link/admin/link/form/'.$id);	
	}
	
}
?>