<?php
class Herb extends Admin_Controller
{
	
	function __construct()
	{
		parent::__construct();
		$this->load->model('herb_model','herb');
	}
	
	function index()
	{
		$data['result'] = $this->herb->limit(20)->get();
		$data['pagination'] = $this->herb->pagination();
		$this->template->build('admin/herb_index',$data);
	}
	
	function form($id = FALSE)
	{
		$data['rs'] = $this->herb->get_row($id);
		$this->template->build('admin/herb_form',$data);
	}
	
	function save()
	{
		if($_POST)
		{
			$id = $this->herb->save($_POST);
			if($_FILES['image']['name'])
			{
				$this->herb->delete_file($id,'uploads/herb/','image');
				$this->herb->save(array('id' => $id, 'image' => $this->herb->upload($_FILES['image'],'uploads/herb/')));
			} 
			set_notify('success', SAVE_DATA_COMPLETE);
		}
		redirect('herb/admin/herb');
	}
	
	function delete($id)
	{
		if($id)
		{
			$this->herb->delete($id);
			set_notify('success', DELETE_DATA_COMPLATE);
		} 
		redirect('herb/admin/herb');		
	}
	function remove_image($id)
	{
		$this->herb->delete_file($id,'uploads/herb/','image');
		$this->herb->save(array('id' => $id, 'image' => NULL));
		set_notify('success', REMOVE_IMAGE_COMPLATE);
		redirect('herb/admin/herb/form/'.$id);	
	}
	
}
?>