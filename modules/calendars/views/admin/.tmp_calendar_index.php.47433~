<!-- Calendar -->
			<link rel='stylesheet' type='text/css' href='js/fullcalendar-1.4.3/redmond/theme.css' />
			<link rel='stylesheet' type='text/css' href='js/fullcalendar-1.4.3/fullcalendar-my.css' />
			<script type='text/javascript' src='js/fullcalendar-1.4.3/fullcalendar.js'></script>
			<script type='text/javascript' src='js/ui.core.js'></script>
			<script type='text/javascript' src='js/ui.draggable.js'></script>
			<script type='text/javascript' src='js/ui.resizable.js'></script>
<!-- !Calendar -->
<script>
        	$(function(){	
			
				$.fullCalendar.parseDate( 'a' );		
				$('#calendar').fullCalendar({
					header: {
						left: 'today',
						center: 'title',
						right: 'prev,next'
					},
					theme: true,
					editable: true,
					eventDrop: function(event, start) {
						$.post('<?php echo base_url()?>calendar/admin/calendar/events_move',{id:event.id,start:start,end:start});
					},
					eventResize: function(event, end){
						$.post('<?php echo base_url()?>calendar/admin/calendar/events_move',{id:event.id,end:end});
					}, 
					dayClick: function(date) { 
						window.location = '<?php echo base_url()?>calendar/admin/calendar/form?date=' + date.getFullYear() + '-' + (date.getMonth()+1) + '-' + date.getDate();
					},
						
					eventMouseover: function(){
						$(this).css('background-color', 'red');
					},
					eventClick: function(event){
						window.location = '<?php echo base_url()?>calendar/admin/calendar/form/' + event.id;
					},
					events: "<?php echo base_url()?>calendar/admin/calendar/events",
					loading: function(bool) {
					if (bool) $('#loading').show();
						else $('#loading').hide();
					}
				});
            });
        </script>
<h1>Calendar</h1>

	<div style="clear:left;display:inline-block;width:100%">
		<div style="height:30px;">&nbsp;
		<div id='loading' style='display:none;text-align:center;'><img src="images/etc/ajax-loader.gif" /></div>
	</div>
	<div id='calendar'></div>
	<div style="clear:both;"></div>