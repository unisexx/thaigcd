<?
//ค่ากำหนดของฐานข้อมูล
	$db_server = 'localhost';
	$db_username = 'root';
	$db_password = '';
	$db_name = ''; //ชื่อของฐานข้อมูล
	$db_user = 'poo_user'; //ชื่อตารางสมาชิก
	$field_user = 'username'; //ชื่อฟิลด์ username
	$field_password = 'password'; //ชื่อฟิลด์ รหัสผ่าน
	$filed_userid = 'id'; //ชื่อฟิลด์ id สมาชิก
	$field_displaname = 'displayname'; //ชื่อฟิลด์ชื่อเรียก ถ้าไม่มีให้กำหนดให้เหมือนกับ field_user
	$field_usericon = 'icon'; //ชื่อฟิลด์รูปประจำตัวสมาชิก ไม่มีปล่อยว่างไว้
	$usericon_path = '../datas/usericons/'; //path ที่เก็บ user icon ถ้าใน db ระบุครบอยู่แล้วให้ปล่อยว่าง
